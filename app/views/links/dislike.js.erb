$('.unlike_link_<%=@link.id%>').bind('ajax:success', function(){
   $('.unlikes_count_<%=@link.id%>').html('<%= escape_javascript @link.get_downvotes.size.to_s %>');
   $('.likes_count_<%=@link.id%>').html('<%= escape_javascript @link.get_upvotes.size.to_s %>');
   $('.unlike_link_<%=@link.id%>').attr('disabled', 'disabled');
   $('.like_link_<%=@link.id%>').removeAttr('disabled');
});